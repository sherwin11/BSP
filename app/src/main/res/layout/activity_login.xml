<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#8fcfa0"
    android:layout_height="match_parent"
    tools:context=".Login">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/linbgsplash"
        android:layout_margin="10dp"
        android:orientation="vertical">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linbgsplash"
        android:orientation="horizontal">
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/linbgsplash"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:src="@drawable/jlp"/>
            <TextView
                android:textColor="#8fcfa0"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/opensanitalic"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carlos Jericho 'ICOT' Petilla "/>
            <TextView
                android:textColor="#8fcfa0"
                android:layout_gravity="center"
                android:fontFamily="@font/opensanitalic"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Governor, Leyte Province"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/linbgsplash"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:src="@drawable/abp"/>
                    <TextView
                        android:textColor="#8fcfa0"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/opensanitalic"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frances Ann B. Petilla"/>
            <TextView
                android:textColor="#8fcfa0"
                android:layout_gravity="center"
                android:fontFamily="@font/opensanitalic"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BSP Chairperson"/>
        </LinearLayout>


    </LinearLayout>
        <LinearLayout
            android:layout_margin="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/leyte"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/bspleyte"/>



        </LinearLayout>
        <TextView
            android:textColor="#8fcfa0"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/opensansbolditalig"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to"/>
        <TextView
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#8fcfa0"
            android:textSize="30sp"
            android:fontFamily="@font/opensansbolditalig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BSP Login Form"/>



                <EditText
                    android:id="@+id/usernamelogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:autofillHints="name"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:backgroundTint="#8fcfa0"
                    android:hint="Email address"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="#705d5e5e"
                    tools:ignore="TouchTargetSizeCheck" />
                <EditText
                    android:id="@+id/passwordlogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:autofillHints="name"
                    android:textAlignment="center"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:backgroundTint="#8fcfa0"
                    android:hint="Password"
                    android:inputType="textWebPassword"
                    android:textColor="@color/black"
                    android:textColorHint="#705d5e5e"
                    tools:ignore="TouchTargetSizeCheck" />
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/butlogin"
                android:fontFamily="@font/opensanitalic"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:text="Login"
                tools:ignore="InvalidId" />
            <Button
                android:id="@+id/butloginoffline"
                android:fontFamily="@font/opensanitalic"
                android:layout_gravity="center"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:text="Offline Mode"
                tools:ignore="InvalidId" />
        </LinearLayout>
                <TextView
                    android:textColor="#8fcfa0"
                    android:layout_marginTop="15sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/opensanitalic"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In collaboration with"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_margin="5dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ddc"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FPOSI"
                android:fontFamily="@font/opensansbolditalig"
                android:textSize="19dp"
                android:textStyle="bold"
                android:textColor="#b30909"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/butcreate"
                android:layout_gravity="center"
                android:fontFamily="@font/opensanitalic"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:visibility="gone"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:text="Create Account"
                tools:ignore="InvalidId" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/setuphost"
                android:layout_gravity="center"
                android:fontFamily="@font/opensanitalic"
                android:layout_width="120dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:text="Setup ip"
                tools:ignore="InvalidId" />
        </LinearLayout>
<!--        <TextView-->
<!--            android:textColor="#8fcfa0"-->
<!--            android:layout_marginTop="15sp"-->
<!--            android:layout_gravity="center"-->
<!--            android:textStyle="bold"-->
<!--            android:fontFamily="@font/opensanitalic"-->
<!--            android:textSize="15sp"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="In collaboration with"/>-->

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


